{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "YTMASC: Run Test Library",
      "type": "shell",
      "icon": { "id": "play", "color": "terminal.ansiGreen" },
      "command": "uv run ytmasc run --db tests/test_library.json -w tests/test_downloads --workers 5",
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "YTMASC: Help (short)",
      "type": "shell",
      "icon": { "id": "play", "color": "terminal.ansiGreen" },
      "command": "uv run ytmasc -h"
    },
    {
      "label": "YTMASC: Help (detailed)",
      "type": "shell",
      "icon": { "id": "play", "color": "terminal.ansiGreen" },
      "command": "uv run ytmasc help"
    },
    {
      "label": "YTMASC: Download Audio",
      "type": "shell",
      "icon": { "id": "play", "color": "terminal.ansiGreen" },
      "command": "uv run ytmasc download dBO47BPH_2I"
    },
    {
      "label": "YTMASC: Convert Audio",
      "type": "shell",
      "icon": { "id": "play", "color": "terminal.ansiGreen" },
      "command": "uv run ytmasc convert dBO47BPH_2I"
    },
    {
      "label": "YTMASC: Tag Audio",
      "type": "shell",
      "icon": { "id": "play", "color": "terminal.ansiGreen" },
      "command": "uv run ytmasc tag dBO47BPH_2I"
    },
    {
      "label": "Install via uv",
      "type": "shell",
      "icon": { "id": "desktop-download", "color": "terminal.ansiBlue" },
      "command": "uv tool install -e ."
    },
    {
      "label": "Delete test downloads",
      "type": "shell",
      "icon": { "id": "trash", "color": "terminal.ansiRed" },
      "command": "Remove-Item tests/test_downloads -Recurse -Force"
    },
    {
      "label": "Delete cache & builds",
      "type": "shell",
      "icon": { "id": "trash", "color": "terminal.ansiYellow" },
      "command": "Remove-Item -Recurse -Force .pytest_cache, build, dist, ytmasc.egg-info, ytmasc.spec -ErrorAction SilentlyContinue"
    },
    {
      "label": "Build with PyInstaller",
      "type": "shell",
      "icon": { "id": "tools", "color": "terminal.ansiYellow" },
      "command": "uv run pyinstaller --noconfirm --onefile --console --name ytmasc --icon=assets/icon.ico ytmasc.py"
    }
  ]
}
